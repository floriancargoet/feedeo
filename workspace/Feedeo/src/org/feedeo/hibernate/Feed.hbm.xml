<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.feedeo" default-lazy="false">
  <class name="Feed">
  	<id name="id" column="idFeed">
  		<generator class="native"/>
  	</id>
  	<property name="title"/>
  	<property name="url" unique="true"/>
  	<property name="link"/>
  	<property name="pubDate"/>
  	<property name="description" type="text"/>
  	
    <map cascade="all" name="articles" lazy="true">
      <key column="idFeed"/>
      <map-key-many-to-many column="idArticle" class="Article"/>
      <many-to-many column="idArticleContent" class="ArticleContent"/>
    </map>
  	<set cascade="none" inverse="true" name="folders" table="directoryFeeds">
  	  <key column="idFeed"/>
  	  <many-to-many column="idDirectory" class="Directory"/>
  	</set>
  
  </class>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="feedeo.Directory" table="Directory">
		<id name="idDirectory" column="idDirectory">
			<generator class="increment"></generator>
		</id>
		<property name="title"/>
		<property name="idParent" />
		
	<!-- LIEN MANY TO MANY AVEC L'UTILISATEUR !-->
	
	<set name="listArticle" table="Dir_Article">
		<key column="idDirectory" />
		<many-to-many class="feedeo.Article" column="idArticle" />
	  </set>
	</class>
	
	<!-- LIEN MANY TO ONE AVEC USER !-->
	<class name="feedeo.Directory" table="Directory">
		<many-to-one name="IdUser" class="feedeo.User" not-null="true" />	
	</class>
</hibernate-mapping>
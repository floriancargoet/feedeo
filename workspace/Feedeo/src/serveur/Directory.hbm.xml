<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="serveur.Directory" table="Directory">
		<id name="idDirectory" column="idDirectory">
			<generator class="increment"></generator>
		</id>
		<property name="title"/>
		<property name="idParent" />
		<property name="hasChildren" />
		
	<!-- LIEN MANY TO MANY AVEC L'UTILISATEUR !-->
	
	<set name="listArticle" table="Dir_Article">
		<key column="idDirectory" />
		<many-to-many class="serveur.Article" column="idArticle" />
	  </set>
	<!-- LIEN MANY TO ONE AVEC USER -->	
	
	<many-to-one name="user" class="serveur.User" column= "idUser" /> <!-- not-null="true" -->
	
	</class>
	
	
</hibernate-mapping>
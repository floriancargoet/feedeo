<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD
3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

	<class name="serveur.User" table="user">

		<id name="idUser" column="idUser">
			<generator class="increment" />
		</id>
		<property name="name" column="name" />
		<property name="lastname" column="lastname" />
		<property name="login" column="login" />
		<property name="password" column="password" />




		<!-- LIEN MANY TO MANY AVEC PREFERENCE !-->
		<set name="userPreferences" cascade="all" inverse="false">
			<key column="idUser" />
			<one-to-many class="serveur.UserPreference" />
		</set>
		
		<!-- LIEN MANY TO MANY AVEC ARTICLE -->
			<set name="article_properties" table="User_Article" inverse="true"> 
				<key column="idUser" /> 
				<one-to-many class="serveur.Articles_Properties" /> 
			</set>
		
		<!-- LIEN ONE TO MANY AVEC FLUX -->
		
		<set name="user_feeds" inverse="true" cascade="all-delete-orphan"> 
			<key column="idUser"></key> 
			<one-to-many class="serveur.Feed" /> 
		</set>
		<!-- LIEN ONE TO MANY AVEC DIRECTORY -->
		
		<set name="user_directories" inverse="true" cascade="all-delete-orphan"> 
			<key column="idUser"></key> 
			<one-to-many class="serveur.Directory" /> 
		</set>
	</class>

</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="feedeo.Article" table="Article">
		<id name="idArticle" column="IdArticle">
			<generator class="increment"></generator>
		</id>
		<property name="title"/>
		<property name="link" />
		<property name="date"  type="timestamp" column="Article_date" />
		<property name="summary"/>
		<property name="read" />
		<property name="author"/>
		<set name="categories" table="Categories">
			<key column="IdArticle"/>
			<element type="string" column="Category"/>
		</set>
		<!-- LIEN MANY TO ONE AVEC FLUX !-->
		<many-to-one name="IdFeed" class="feedeo.Feed" not-null="true" />		
		
	</class>
	<!-- LIEN MANY TO MANY AVEC DIRECTORY!-->
	<class name="feedeo.Article" table="Article">
	<set  name="listDir" table="Dir_Article" inverse="true" >
			<key column="idArticle" />
			<many-to-many  class="feedeo.Directory" column="idDirectory" >
		</set>		
	</class>
	<!-- LIEN ONE TO MANY AVEC ARTICLES PROPERTIES!-->
	</class name="feedeo.Article" table="Article">
		<set name="articles_properties" inverse="true" cascade="all-delete-orphan">
		<key column="IdArticle"></key>
		<one-to-many class="feedeo.Articles_Properties" />
		</set>
	</class>
	
	<!-- LIEN MANY TO MANY AVEC USER!-->
	<class name="feedeo.Article" table="Article">
	<set  name="article_user" table="User_Article" inverse="true" >
			<key column="idArticle" />
			<many-to-many  class="feedeo.User" column="idUser" >
		</set>		

</hibernate-mapping>
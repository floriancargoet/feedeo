<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD
3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

	<class name="serveur.Article" table="Article">
		<id name="idArticle" column="IdArticle">
			<generator class="increment"></generator>
		</id>
		<property name="title"/>
		<property name="link" />
		<property name="date"  type="timestamp" column="Article_date" />
		<property name="summary" type= "text" length="2147483647"/>
		<property name="author"/>
		<!--set name="categories" table="Categories">
			<key column="IdArticle"/>
			<element type="string" column="Category"/>
		</set-->
		
		<!-- LIEN MANY TO ONE AVEC FLUX -->
		<many-to-one name="feed" class="serveur.Feed"  column= "idFeed" />		
	
	<!-- LIEN MANY TO MANY AVEC DIRECTORY!-->
	
		<set  name="listDir" table="Dir_Article" inverse="true" >
			<key column="idArticle" />
			<many-to-many  class="serveur.Directory" column="idDirectory" />
		</set>		
		
	<!-- LIEN MANY TO MANY AVEC USER!	-->
		<set name="article_properties" table="User_Article" inverse="true"> 
				<key column="idArticle" /> 
				<one-to-many class="serveur.Articles_Properties" /> 
	
	</set>	

</class>	

</hibernate-mapping>
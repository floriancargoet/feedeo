<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="serveur.Feed" table="Feed">
		<id name="idFeed" column="IdFeed">
			<generator class="increment"></generator>
		</id>
		<property name="title"/>
		<property name="url" />
		<property name="pubDate"  type="timestamp" column="Article_date" />
		<property name="link"/>
		<property name="idDirOrig"/>
		
		<!-- LIEN ONE TO MANY AVEC ARTICLE -->
		<set name="articles" inverse="true" > <!-- cascade="all-delete-orphan" -->
		<key column="idFeed"></key>
		<one-to-many class="serveur.Article" />
		</set>
		
		<!-- LIEN MANY ONE AVEC USER -->
		<many-to-one name="user" class="serveur.User"  column= "idUser" />
		 
		
	</class>
</hibernate-mapping>